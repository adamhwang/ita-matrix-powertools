{
  "manifest_version": 3,
  "name": "ITA Matrix Powertools",
  "version": "__VERSION__",
  "description": "__DESCRIPTION__",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://matrix.itasoftware.com/*"
      ],
      "js": ["webext.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "*://matrix.itasoftware.com/*"
      ],
      "resources": ["ita-matrix-powertools.user.js"]
    }
  ]
}
